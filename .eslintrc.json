{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-undef": 0,
    "quotes": 0,
    "semi": 0,
    "import/no-extraneous-dependencies": "off",
    "no-plusplus": "off",
    "comma-dangle": "off",
    "function-paren-newline": "off",
    "implicit-arrow-linebreak": "off",
    "object-curly-newline": "off",
    "operator-linebreak": "off",
    "indent": "off",
    "allowElseIf": true
  }
}
